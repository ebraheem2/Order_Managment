<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">
    <TextView
        android:id="@+id/textViewOrderLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Order Status:"
        android:layout_marginTop="16dp" />

    <Spinner
        android:id="@+id/spinnerOrderStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/textViewShipmentLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Shipment Status:" />

    <Spinner
        android:id="@+id/spinnerShipmentStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</LinearLayout>
